
n=1:1:20
subplot(2,2,1)
a=2;
r=.8;
y=a*r.^n;
stem(n,y,'k')
xlabel('n')
ylabel('y(n)')
title(' where r <1 ')
grid on
hold on

subplot(2,2,2)
a=2;
r=1.2;
y=a*r.^n;
stem(n,y,'k')
xlabel('n')
ylabel('y(n)')
title('where r > 1 ')
grid on
hold on

subplot(2,2,3)
a=2;
r=5;
y=a*r.^n;
stem(n,y,'k')
xlabel('n')
ylabel('y(n)')
title('where r =5 ')
grid on
hold on

subplot(2,2,4)
a=2;
r=.2;
y=a*r.^n;
stem(n,y,'k')
xlabel('n')
ylabel('y(n)')
title('where r =.2')
grid on
hold on
